class Solution {
public:
        bool ispalind(string t,int i,int j)
        {
                while(i<j && t[i]==t[j])
                {
                        i++;
                        j--;
                }
                
                if(i<j)
                        return false;
                else
                        return true;
        }
        bool solve(string a, string b)
        {
                
 int i=0;
            int j=a.size()-1;
            while(i<j && a[i]==b[j])
            {
                    i++;
                    j--;
            }
            
            return ispalind(a,i,j) || ispalind(b,i,j);
            
                       
        }
    bool checkPalindromeFormation(string a, string b) {
            
            return solve(a,b) || solve(b,a);
       
            
    }
};
