class Solution {
public:
  long long  int numWays(string s) {
            
            
           long long int   sum = 0;
             long long int count=0;
             long long int n=s.size();
            long long int ans;
            for( long long int i=0;i<n;i++)
            {
                    if(s[i]=='1')
                            count++;
            }
            if(count%3!=0)
                    return 0;
           else if(count==0)
           {
               
                   return ((n-1)*(n-2)/2)%1000000007;
                   
           }
           
                   long long int t=count/3;
                   string s1="";
                   string s2="";
                   string s3="";
                    long long int i=0;
                 for(;i<n;i++)
                 {
                      if(s[i]=='1')
                              t--;
                         
                         s1 += s[i];
                         if(t==0)
                         {
                                 break;
                         }
                 }
                   
                    int x = s1.size();
                   t = count/3;
                   for(int i=n-1;i>=0;i--)
                   {
                        if(s[i]=='1')
                              t--;
                         
                         s3 += s[i];
                         if(t==0)
                         {
                                 break;
                         }   
                   }
                    long long int y=s3.size();
                   long long int x1=0;
                    long long int x2=0;
                   for(int i=x;i<n-y;i++)
                   {
                          if(s[i]=='1')
                          {
                               x1 = i - x;
                                  break;
                          }
                   }
                   for( long long int i=n-y-1;i>=x;i--)
                   {
                            if(s[i]=='1')
                          {
                                x2 = (n-y-1)-i ;
                                  break;
                          }
                   }
                    
                    
                    return ((x1+1)*(x2+1))%1000000007;
                   
                   
                   
         
        
    }
};
