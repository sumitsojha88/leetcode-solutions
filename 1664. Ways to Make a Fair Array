class Solution {
public:
    int waysToMakeFair(vector<int>& nums) {
        
            int pesum=0;
            int posum=0;
            int n=nums.size();
            for(int i=0;i<n;i++)
            {
                    if(i%2)
                            posum += nums[i];
                    else
                            pesum += nums[i];
            }
            int sosum=0;
            int sesum=0;
            int count=0;
            for(int i=n-1;i>=0;i--)
            {
                  if(i%2==0)
                  {
                          pesum -= nums[i];
                  }
                    else
                            posum -= nums[i];
                    
                    
                    if((pesum+sesum)==(posum+sosum))
                            count++;
                    
                    if(i%2==0)
                            sosum += nums[i];
                    else
                            sesum += nums[i];
                    
            }
            
            
            return count;
    }
};
