class Solution {
public:
    int shipWithinDays(vector<int>& w, int D) {
        int n = w.size();
            if(n==0 || D==0)
                    return 0;
            
            int maxi = 0;
            int sum = 0;
            for(int i=0;i<n;i++)
            {
                    sum += w[i];
                    maxi = max(maxi,w[i]);
            }
            
            int ans = maxi;
            if(n==D) return ans;
            while(maxi<sum)
            {
                    int mid = (maxi+sum)/2;
                    int c = 1;
                    int csum = 0;
                   for(int i=0;i<n;i++)
                   {
                           if(csum + w[i] > mid)
                           {
                                   csum = 0;
                                   c++;
                           }
                            csum += w[i];
                   }
                    
                    if(c>D)
                    {
                        maxi = mid + 1;    
                     }
                    else
                    {
                           sum = mid;  
                    }
                    
            }
            
            
            
            return maxi;
            
    }
};
