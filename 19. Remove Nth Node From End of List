 if (head == NULL || n == 0) 
                return head;

        struct ListNode *p0 = head, *p1= head;
        int cnt = 0;
        while (p0->next != NULL)
        {
            cnt++;
            p0 = p0->next;
            if (cnt > n)
                p1 = p1->next;
        }

        if (cnt == n - 1) return head->next;

        p1->next = p1->next->next;
        return head;
