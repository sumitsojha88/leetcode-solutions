class Solution {
public:
    int stoneGameVI(vector<int>& aliceValues, vector<int>& bobValues) {
        
            int n= aliceValues.size();
            vector<pair<int,int>> v;
            for(int i=0;i<n;i++)
            {
                    v.push_back({aliceValues[i]+bobValues[i],i});
            }
            sort(v.begin(),v.end());
            reverse(v.begin(),v.end());
            int sum=0;
            for(int i=0;i<n;i++)
            {
                    if(i%2==0)
                    sum += aliceValues[v[i].second];
                    else
                     sum -= bobValues[v[i].second];   
            }
            
            
            if(sum>1)
                    sum = 1;
            else if(sum<-1)
                    sum= -1;
            
                    return sum;
                    
    }
};
