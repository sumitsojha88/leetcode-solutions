class Solution {
public:
       
    int minCost(string s, vector<int>& cost) {
            
            int ans = 0;
           
            stack<pair<char,int>> st;
            for(int i=0;i<s.size();i++)
            {
            
                    if(!st.empty() && st.top().first==s[i])
                    {
                            if(st.top().second>=cost[i])
                            {
                                    ans += cost[i];
                            }
                            else
                            {
                                    ans += st.top().second;
                                    st.pop();
                                    
                                    st.push({s[i],cost[i]});
                            }
                           
                    }
                    else 
                            {
                                   
                                  st.push({s[i],cost[i]});
                            }
                    
                    
            }
            
            
            return ans;
        
    }
};
