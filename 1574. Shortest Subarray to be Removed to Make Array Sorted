class Solution {
public:
    int findLengthOfShortestSubarray(vector<int>& arr) {
        
            int p=0;
           
            int t=0;
            int n=arr.size();
             int s=n-1;
            while(p<n-1 && arr[p]<=arr[p+1])
                    p++;
            
            
            if(p==n-1) return 0;
            while(s>0 && arr[s]>=arr[s-1])
                    s--;
            
            int ans = min(n-p-1,s);
            int i=0;
            int j=s;
            for(int i=0;i<p+1;i++)
            {
                    if(arr[i]<=arr[s])
                    {
                            ans = min(ans,s-i-1);
                    }
                    else if(s<n-1)
                    {
                            s++;
                    }
                    else
                            break;
            }
            return ans;
            
    }
            
            
};
