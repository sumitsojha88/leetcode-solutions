class Solution {
public:
    int getMaximumGenerated(int n) {
            
        vector<int> dp(n+2,0);
            
            if(n==0) return 0;
            if(n==1) return 1;
            if(n==2) return 1;
            
            dp[0]=0;
            dp[1]=1;
            dp[2]=1;
            
            for(int i=3;i<=n;i++)
            {
                     if(i%2==0)
                             dp[i] = dp[i/2];
                     else
                             dp[i] = dp[((i)/2)+1] + dp[i/2];
            }
            
            
             int maxi = 0;
             for(int i=0;i<=n;i++)
            {
                     maxi = max(maxi,dp[i]);
            }
            
           
            
            return maxi;
    }
};
