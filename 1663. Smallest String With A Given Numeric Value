class Solution {
public:
    string getSmallestString(int n, int k) {
           string ans="";
            for(int i=0;i<n;i++)
            {
                    ans += char('a');
            }   
            k = k- n;
            for(int i=n-1;i>=0;i--)
            {
                    if(k>25)
                    {
                            ans[i] = char('z');
                            k = k - 25;
                    }
                    else
                    {
                           ans[i]= char('a'+k);
                            k = 0;
                            break;
                    }
            }
            return ans;
    }
};
