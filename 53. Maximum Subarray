class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        /*int max_local=nums[0];
        int max_global=0;
        for(int i=0;i<nums.size();i++)
        {
            max_global=max_global + nums[i];
            if(max_local < max_global)
            {
                
             max_local= max_global; }
            if(max_global<0){
                max_global=0;
            }
            
        }
        return max_global; */
     /*    int max_local=nums[0];
        int max_global=nums[0];
        
        for(int i=1;i<nums.size();i++){
            max_local=max(nums[i],(max_local+nums[i]));
            max_global=max(max_local,max_global);
        }
        return max_global; */
            
            int n=nums.size();
            int dp[n];
            int dp[0]=nums[0];
            int maxsum=nums[0];
            for(int i=1;i<n;i++)
            {
                   dp[i]=max(nums[i],dp[i-1]+nums[i]);
                    if(dp[i]>maxsum)
                            maxsum=dp[i];
                    
            }
        return maxsum;
    }
};
