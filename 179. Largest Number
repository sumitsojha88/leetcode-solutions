class Solution {
public:
   static bool compare(int a,int b)
   {
           return to_string(a) + to_string(b) > to_string(b) + to_string(a) ;
   }
    string largestNumber(vector<int> &nums) {
       int n=nums.size();
            if(nums.empty())
                    return "" ;
            sort(nums.begin(),nums.end(),compare);
            string res="";
            for(int i=0;i<n;i++)
            {
                res += to_string(nums[i]);
            }
            return res[0] == '0' ? "0":res;
    }
};
