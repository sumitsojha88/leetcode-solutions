class Solution {
public:
    int maxProfit(vector<int>& prices) {
            int n=prices.size();
           int fb = INT_MIN;
            int fs = 0;
            int sb = INT_MIN;
            int ss = 0;
            for(int i=0;i<n;i++)
            {
                 fb = max(fb,-prices[i]);
                  fs = max(fs,prices[i]+fb);
                    sb = max(sb,fs-prices[i]);
                    ss = max(ss,prices[i]+sb);
            }
            
            return ss;
        
    }
};
