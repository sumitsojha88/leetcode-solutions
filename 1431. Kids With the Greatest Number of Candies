class Solution {
public:
    vector<bool> kidsWithCandies(vector<int>& candies, int extraCandies) {
            int n=candies.size();
        vector<bool> ans;
            int maximum=INT_MIN;
            for(int i=0;i<n;i++)
            {
                  if(candies[i]>maximum)
                          maximum   = candies[i];
            }
            for(int i=0;i<n;i++)
            {
                if(candies[i]+extraCandies >= maximum)
                        ans.push_back(true) ;
                    else
                         ans.push_back(false);  
            }
            return ans;
    }
};
